.page {
	height 100%
	font-family 'Ggraphik', arial, sans-serif
	line-height 20px
	font-size 16px
	background $color-white
	min-height 420px
}

.table {
	display table
}

.cell {
	display table-cell
}

.table, .cell {
	width 100%
	height 100%
	text-align center
	vertical-align: middle
}

.container {
	display inline-block
	width 80%
	background-color white
	position relative

	&:after {
		content " "
		position relative
		display block
		padding-top 66.67%
	}
}

.container--flexible {
	width 135vh
}

.inner {
	position absolute
	width 100%
	height 100%
	overflow hidden
}